<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_green_dark"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="5dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageViewTopBack"
            android:layout_width="80dp"
            android:layout_height="110dp"
            android:layout_marginRight="8dp"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="@id/imageViewTop"
            app:layout_constraintStart_toStartOf="@id/imageViewTop"
            app:layout_constraintEnd_toStartOf="@id/imageViewTop"
            app:layout_constraintBottom_toBottomOf="@id/imageViewTop"
            app:srcCompat="@drawable/ca" />

        <ImageView
            android:id="@+id/imageViewTop"
            android:layout_width="80dp"
            android:layout_height="110dp"
            android:layout_marginRight="8dp"
            app:srcCompat="@drawable/back" />

        <TextView
            android:id="@+id/textViewPlayer2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Player 2\nScore: 0\nCard(s): 7"
            android:textSize="14sp"
            android:textColor="#000000"
            android:textStyle="bold" />


    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearBottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.9">

        <ImageView
            android:id="@+id/imageViewBottomBack"
            android:layout_width="80dp"
            android:layout_height="110dp"
            android:layout_marginRight="8dp"
            android:visibility="gone"
            app:srcCompat="@drawable/ca" />

        <ImageView
            android:id="@+id/imageViewBottom"
            android:layout_width="80dp"
            android:layout_height="110dp"
            android:layout_marginRight="8dp"
            app:srcCompat="@drawable/back" />

        <TextView
            android:id="@+id/textViewPlayer4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Player 4\nScore: 0\nCard(s): 7"
            android:textSize="14sp"
            android:textColor="#000000"
            android:textStyle="bold" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearLeft"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.5">

        <ImageView
            android:id="@+id/imageViewLeftBack"
            android:layout_width="80dp"
            android:layout_height="110dp"
            android:layout_marginBottom="8dp"
            android:visibility="gone"
            app:srcCompat="@drawable/ca" />

        <ImageView
            android:id="@+id/imageViewLeft"
            android:layout_width="80dp"
            android:layout_height="110dp"
            android:layout_marginBottom="8dp"
            app:srcCompat="@drawable/back" />

        <TextView
            android:id="@+id/textViewPlayer1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Player 1\nScore: 0\nCard(s): 7"
            android:textSize="14sp"
            android:textColor="#000000"
            android:textStyle="bold" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearRight"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.5">

        <ImageView
            android:id="@+id/imageViewRightBack"
            android:layout_width="80dp"
            android:layout_height="110dp"
            android:layout_marginBottom="8dp"
            android:visibility="gone"
            app:srcCompat="@drawable/ca" />

        <ImageView
            android:id="@+id/imageViewRight"
            android:layout_width="80dp"
            android:layout_height="110dp"
            android:layout_marginBottom="8dp"
            app:srcCompat="@drawable/back" />

        <TextView
            android:id="@+id/textViewPlayer3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Player 3\nScore: 0\nCard(s): 7"
            android:textSize="14sp"
            android:textColor="#000000"
            android:textStyle="bold" />


    </LinearLayout>



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/centerCardImageView"
            android:layout_width="80dp"
            android:layout_height="110dp"
            app:srcCompat="@drawable/back" />

        <TextView
            android:id="@+id/textViewLeadCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LeadCard\nTrick: 1\nRound: 1\nCard Left: 23"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#ffffff" />
    </LinearLayout>

    <Button
        android:id="@+id/restartButton"
        android:layout_width="85dp"
        android:layout_height="35dp"
        android:text="Restart"
        android:textSize="10sp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent" />





</androidx.constraintlayout.widget.ConstraintLayout>
